import java.util.*;
public class Hello{
    public static void main(String[] args){
        Scanner sc= new Scanner(System.in);

        int i,sum=0;

        System.out.print("Enter a positive integer number  : ");
        int n= sc.nextInt();

        for (i=1;i<=n;++i)
        {
            sum += i;
        }
        System.out.println("Sum of natural number is = "+sum);
    }
}
