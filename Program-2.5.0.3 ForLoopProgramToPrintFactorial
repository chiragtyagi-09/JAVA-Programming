import java.util.*;
public class Hello {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int fact = 1;

        System.out.print("Enter a number to print its factorial  : ");
        int n = sc.nextInt();

        if (n < 0)
            System.out.println("Error! Factorial of a negative number doesn't exist.");
        else {
            for (int i = 1; i <= n; ++i) {
                fact *= i;
            }
            System.out.printf("Factorial of %d ", fact);

        }
    }
}
