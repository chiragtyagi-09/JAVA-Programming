import java.util.*;
public class Hello {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);


        System.out.print("Press 1 to print number or Press 2 to print *  : ");
        int  p=sc.nextInt();

        System.out.print("Enter a number how many times you want to print : ");
        int n =sc.nextInt();


        if(p==1) {
            for (int i = 1; i <= n; i++) {
                for (int j = 1; j <= i; j++) {
                    System.out.print(" "+j);
                }

                System.out.println();

            }
        }


        if(p==2) {
            for (int i = 1; i <= n; i++) {
                for (int j = 1; j <= i; j++) {
                    System.out.print("* ");
                }

                System.out.println();

            }
        }


    }
}

