import java.util.*;
public class Hello {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int sum=0;

        System.out.print("Enter how many values you want to enter : ");
        int n = sc.nextInt();

            System.out.print("Enter integer value to find out their percentage : ");

            for (int i = 1; i <= n; i++) {
                int x = sc.nextInt();
                sum = sum+x ;
            }
            System.out.printf("Percentage = %f ",sum/(float)n);

        }
    }
